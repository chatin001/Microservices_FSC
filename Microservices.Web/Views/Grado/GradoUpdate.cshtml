
@using Microservices.Web.Models.Grado
@model GradoRegisterDto

<form asp-action="GradoUpdate">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Actualizar Grados</h1>
        <input asp-for="GradoId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Codigo de Grado</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="GradoCode" class="form-control" />
                <span asp-validation-for="GradoCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Descripcion del Grado</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="GradoName" class="form-control" />
                <span asp-validation-for="GradoName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Abreviatura</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="GradoAbrev" class="form-control" />
                <span asp-validation-for="GradoAbrev" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="GradoIndex" class="btn-primary btn form-control ">Regresar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
