@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-0" role="alert" style="border-radius: 0; position: relative; z-index: 1050;">
        <strong>Éxito!</strong> @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-0" role="alert" style="border-radius: 0; position: relative; z-index: 1050;">
        <strong>Error!</strong> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show mb-0" role="alert" style="border-radius: 0; position: relative; z-index: 1050;">
        <strong>Advertencia!</strong> @TempData["warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["info"] != null)
{
    <div class="alert alert-info alert-dismissible fade show mb-0" role="alert" style="border-radius: 0; position: relative; z-index: 1050;">
        <strong>Información!</strong> @TempData["info"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}