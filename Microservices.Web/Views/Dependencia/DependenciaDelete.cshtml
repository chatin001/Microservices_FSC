﻿@using Microservices.Web.Models.Dependencia
@model DependenciaDto

<form asp-action="DependenciaDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Eliminar Dependencia</h1>
        <input asp-for="DependenciaId" hidden />
        <hr />
        <div class="row">
            
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Nombre</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DependenciaName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Abreviatura</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DependenciaAbrev" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="DependenciaIndex" class="btn-primary btn form-control ">Regresar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>