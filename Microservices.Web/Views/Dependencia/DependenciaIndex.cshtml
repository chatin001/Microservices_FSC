@using Microservices.Web.Models.Dependencia
@model IEnumerable<DependenciaDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-dark">Listado Dependencias</h1>
            </div>
        </div>
    </div>
    <div class="card-body pt-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-action="DependenciaCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i>Crear Nueva Dependencia</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Abreviatura</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DependenciaName</td>
                        <td>@item.DependenciaAbrev</td>
                        <td>
                            <a class="btn btn-success" asp-action="DependenciaEdit" asp-route-dependenciaId="@item.DependenciaId">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a class="btn btn-danger" asp-action="DependenciaDelete" asp-route-dependenciaId="@item.DependenciaId">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>